<h1>Listing favorites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street 1</th>
      <th>Street 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Type</th>
      <th>Notes</th>
      <th>User</th>
      <th>Business</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.name %></td>
        <td><%= favorite.street_1 %></td>
        <td><%= favorite.street_2 %></td>
        <td><%= favorite.city %></td>
        <td><%= favorite.state %></td>
        <td><%= favorite.zip_code %></td>
        <td><%= favorite.latitude %></td>
        <td><%= favorite.longitude %></td>
        <td><%= favorite.type %></td>
        <td><%= favorite.notes %></td>
        <td><%= favorite.user_id %></td>
        <td><%= favorite.business_id %></td>
        <td><%= link_to 'Show', favorite %></td>
        <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
        <td><%= link_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

