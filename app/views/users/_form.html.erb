<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset>

		<%= f.input :first_name %>
		<%= f.input :last_name %>
		
		<%= f.input :username %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		
		<%= f.input :email, :input_html => {:maxlength => 25} %>
		<%= f.input :phone, :input_html => {:maxlength => 15} %>
		
		<%= f.input :street_1 %>
		<%= f.input :street_2 %>
		<%= f.input :city %>
		<%= f.input :state, :collection => User::STATES_LIST.map{|a,b| b}%>
		<%= f.input :zip_code %>

		<%= f.input :role, :collection => User::ROLES_LIST2, :prompt => true %>
<br></br>
    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',users_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
